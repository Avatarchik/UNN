THREAD_MV 
void SumMV(
  uint3 Tid : SV_DispatchThreadID,
  uint3 Gid : SV_GroupID,
  uint3 GTid : SV_GroupThreadID
)
{
  int x = Tid.x;
  int y = Tid.y;
  if (x >= _CCols || y >= _CRows)
    return;

  float acc = 0;
  for (y = 0; y < _BRows; y++)
  {
    acc += _B[y * _CCols + x];
  }
  _C[x] = acc;
}


