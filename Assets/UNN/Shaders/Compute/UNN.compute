}


THREAD_MV 
void VarianceMV(
  uint3 Tid : SV_DispatchThreadID,
  uint3 Gid : SV_GroupID,
  uint3 GTid : SV_GroupThreadID
)
{
  int x = Tid.x;
  int y = Tid.y;
