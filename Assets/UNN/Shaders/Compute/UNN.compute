}


THREAD
void BNForward(
  uint3 Tid : SV_DispatchThreadID,
  uint3 Gid : SV_GroupID,
  uint3 GTid : SV_GroupThreadID
)
{
  int x = Tid.x;
  int y = Tid.y;
  if (y < _Rows && x < _Cols)
  {
    int idx = y * _Cols + x;
    _Y[idx] = _Gamma[x] * _X[idx] + _Beta[x];
  }
}

THREAD
void BNDVar(
  uint3 Tid : SV_DispatchThreadID,
  uint3 Gid : SV_GroupID,
  uint3 GTid : SV_GroupThreadID
)
{
  int x = Tid.x;
  int y = Tid.y;
  if (y < _Rows && x < _Cols)
  {
    int idx = y * _Cols + x;
    _Y[idx] = -0.5 * _X[idx] / _T[idx];
  }
}

THREAD
void BNDXc(
  uint3 Tid : SV_DispatchThreadID,
  uint3 Gid : SV_GroupID,
  uint3 GTid : SV_GroupThreadID
)
{
  int x = Tid.x;
  int y = Tid.y;
  if (y < _Rows && x < _Cols)
  {
    int idx = y * _Cols + x;
    _Y[idx] = _Y[idx] + _Sigma * _X[idx] * _T[x];
  }
}

THREAD
void BNDX(
  uint3 Tid : SV_DispatchThreadID,
  uint3 Gid : SV_GroupID,
  uint3 GTid : SV_GroupThreadID
)
{
  int x = Tid.x;
  int y = Tid.y;
  if (y < _Rows && x < _Cols)
  {
    int idx = y * _Cols + x;
    _Y[idx] = _X[idx] - _T[x] * _Sigma;
  }
}