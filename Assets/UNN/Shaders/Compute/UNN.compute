THREAD
void CopyMM(
  uint3 Tid : SV_DispatchThreadID,
  uint3 Gid : SV_GroupID,
  uint3 GTid : SV_GroupThreadID
)
{
  int x = Tid.x;
  int y = Tid.y;
  if (y < _CRows && x < _CCols)
  {
    int index = y * _CCols + x;
    _C[index] = _B[index];
  }
}


